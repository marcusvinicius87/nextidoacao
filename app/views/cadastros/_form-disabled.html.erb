<%= form_with(model: cadastro, local: true, class: 'form-horizontal m-t-20') do |form| %>
<% if cadastro.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(cadastro.errors.count, "error") %> prohibited this cadastro from being saved:</h2>

  <ul>
    <% cadastro.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <div class="col-12">
    <label> ID do Cliente ENEL </label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :id_cliente_enel, id: :cadastro_id_cliente_enel, class: 'form-control cor-texto-formulario', placeholder: 'ID do Cliente ENEL', disabled: true  %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Digito Verificador </label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :digito_verificador_cliente_enel, id: :cadastro_digito_verificador_cliente_enel, class: 'form-control cor-texto-formulario', placeholder: 'Digito Verificador', disabled: true  %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12" >
    <label> Código Ocorrência </label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :codigo_ocorrencia, id: :cadastro_codigo_ocorrencia, class: 'form-control cor-texto-formulario', placeholder: 'Código Ocorrência', disabled: true  %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Data </label>
  </div>
  <div class="col-12">
    <div class="well">
      <div class="input-append date">
        <%= form.text_field :data_ocorrencia, class: 'form-control cor-texto-formulario', type: 'date', disabled: true  %>
      </div>
    </div> 
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Valor</label>
  </div>
  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :valor, id: :cadastro_valor, class: 'form-control cor-texto-formulario', placeholder: 'Valor', :step => 0.01, disabled: true  %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-12">
    <label> Número de Parcelas </label>
  </div>

  <div class="col-12">
    <div class="input-group">
      <%= form.number_field :parcelas, id: :cadastro_parcelas, class: 'form-control cor-texto-formulario', placeholder: 'Número de Parcelas', disabled: true %>
    </div>
  </div>
</div>

<div class="form-group row">
 <div class="col-12">
  <label> Número do Protocolo (Opcional) </label>
</div>

<div class="col-12">
  <div class="input-group">
    <%= form.text_area :livre, id: :cadastro_livre, class: 'form-control cor-texto-formulario', disabled: true  %>
  </div>
</div>
</div>

<div class="form-group text-right m-t-20">
  <div class="col-xs-6">
    <div class="actions">
      <%= link_to 'Voltar', cadastros_path, class: 'btn float-left btn-primary waves-light' %>

      <%= button_to 'Deletar', cadastro, method: :delete, class: 'btn float-right cor-botao-deletar' %>
    </div>  
  </div>
</div>
<% end %>